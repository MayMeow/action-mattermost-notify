{
    "name": "maymeow/action-mattermost-notify",
    "description": "Send notification to mattermost",
    "version": "1.0.0",
    "autoload": {
        "psr-4": {
            "Maymeow\\ActionMattermostNotify\\": "src/"
        }
    },
    "authors": [
        {
            "name": "May Meow",
            "email": "may@maymeow.com"
        }
    ],
    "require": {
        "symfony/http-client": "^6.1",
        "symfony/console": "^6.1"
    },
    "bin": ["app.php"],
    "require-dev": {
        "phpstan/phpstan": "^1.8",
        "cakephp/cakephp-codesniffer": "^4.6"
    },
    "scripts": {
        "stan": "phpstan analyse src/",
        "cs-check": "phpcs --colors -p src/",
        "cs-fix": "phpcbf --colors -p src/"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    }
}
